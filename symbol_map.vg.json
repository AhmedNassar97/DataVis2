{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background":"#404040",
  "width": 1515,
  "height": 800,
  "title": "Global Deaths from Natural Disasters, 1900-2021 ",
  "projection": {"type": "equalEarth"},
  "params": [          {
    "name": "Continent_selection",
    "bind": {
      "input": "select",
      "options": [
        null,
        "Americas",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "labels":[
        "Show All",
        "Americas",
        "Europe",
        "Africa",
        "Asia",
        "Oceania"
      ],
      "name": "Select Continent: "
    }
  }],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "params": [
        {
          "name": "highlight_geo",
          "select": {"type": "point", "on": "mouseover", "clear":"mouseout"}
        }],
      "mark": {"type": "geoshape", "fill": "#686768", "stroke": "white"},
      "encoding": {
        "fillOpacity":{
          "condition": {
            "param": "highlight_geo",
            "empty": true,
            "value": 1
          },
          "value":0.45
        },
        "strokeOpacity":{
          "condition": {
            "param": "highlight_geo",
            "empty": true,
            "value": 1
          },
          "value":0.3
        }

      }
    },
    {
      "data": {
        "url": "SubsetC_Deaths.csv"
      },
      "layer":[{
      "transform": [{"filter": "Continent_selection == null || datum.Continent == Continent_selection"}],
      "mark": {"type": "circle", "opacity":0.6, "stroke":"white"},
      "params": [
        {
          "name": "highlight",
          "select": {"type": "point", "on": "mouseover"}
        },
        {"name": "select", "select": "point"}
      ],
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "Total_Deaths",
          "type": "quantitative",
          "scale":{
            "domain":[10000,5000000],
            "range":[200,2000]
          
          }
        },
        "color": {
          "value":"red"
        },
        "fillOpacity": {
          "condition": {"param": "select", "value": 1},
          "value": 0.2
        },
        "strokeOpacity":{
          "value":1
        },
        "strokeWidth": {
          "condition": [
            {
              "param": "select",
              "empty": false,
              "value": 9
            },
            {
              "param": "highlight",
              "empty": false,
              "value": 7
            }
          ],
          "value": 0.5
        },
        "tooltip": [
          {"field": "Continent", "type": "nominal"},
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Total_Deaths", "type": "quantitative", "title":"Death Count", "format" :","}
        ]
      }
    },
    {"mark":{
        "type": "text",
        "fill":"white",
        "fontWeight":"bold",
        "fontStyle":"italic",
        "fontSize":25
    },
      "encoding": {
          "longitude": {"field": "long", "type": "quantitative"},
          "latitude": {"field": "lat", "type": "quantitative"},
          "text":{"field":"Country", "type": "nominal"},
          "opacity": {
            "condition": [{
              "test": "datum['Country'] == 'China' || datum['Country'] == 'Russia' || datum['Country'] == 'India'",
              "value": 1
            }],
            "value": 0
          }

    }}
  ]}],
  "config": {
      "legend": {
        "labelFontSize": 20,
        "titleFontSize": 20,
        "labelColor":"white",
        "titleColor":"white"
      },
      "title": {
        "color":"white",
        "fontSize": 30
      },
      "view": {
        "stroke": "transparent"
     }
      }
}