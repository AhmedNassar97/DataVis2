{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title":"Occurance of Natural Disasters Across Continents, 1900-2021",
  "background":"#404040",
  "width": 1500,
  "height": 800,
  "data": {
    "url": "SubsetA_ContinentDis.csv"
  },
  "layer": [{
    "mark": {"type": "arc", "innerRadius": 20, "stroke": "#fff"},
    "params": [
      {
        "name": "highlight",
        "select": {"type": "point", "on": "mouseover", "clear":"mouseout"}
      },
      {"name": "select", "select": {"type":"point"}}
    
    ],
    "encoding": {
      "fillOpacity": {
        "condition": {"param": "highlight", "value": 1},
        "value": 0.3
      },
      "strokeWidth": {
        "condition": [
          {
            "param": "select",
            "empty": false,
            "value": 4
          },
          {
            "param": "highlight",
            "empty": false,
            "value": 3
          }
        ],
        "value": 0
      }
    }
  },
  {
    "mark": {"type": "text", "radiusOffset": 10, "fill":"white", "fontSize":12, "fontWeight":"bold", "dy":-25},
    "encoding": {
      "text": {"field": "Total_Disasters", "type": "quantitative"}
    }
  },
  {
    "mark": {
      "type": "text", 
      "radiusOffset": 10, 
      "fill":"#F3EFF5", 
      "fontSize":25, 
      "fontWeight":"bold",
      "fontStyle":"italic",
      "dx":-180,
      "dy":65
    },
    "encoding": {
      "text": {
        "field": "Note", 
        "type": "nominal",
        "condition":{"test":"datum['Continent'] == 'Asia'","value":["Asia sits on the Pacific Ring of Fire,", 
        "a geologically and volcanically active area"]}
      },
      "opacity":{
        "condition": {"param": "highlight", "value": 1},
        "value": 0.3
      }
    }
  },
  {
    "mark": {
      "type": "text", 
      "radiusOffset": 10, 
      "fill":"#F3EFF5", 
      "fontSize":12, 
      "fontWeight":"bold",
      "fontStyle":"italic",
      "dx":250,
      "dy":0
    },
    "encoding": {
      "text": {
        "field": "Note", 
        "type": "nominal",
        "condition":{"test":"datum['Continent'] == 'Americas'","value":["America is densily occupied.","Massive infrastrucure triggers earthquakes."]}
      },
      "opacity":{
        "condition": {"param": "highlight", "value": 1},
        "value": 0.3
      }
      
    }
  }
],
  "encoding": {
    "theta": {"field": "Total_Disasters", "type": "quantitative", "stack": true},
    "radius": {"field": "Total_Disasters", "scale": {"type": "sqrt", "zero": true, "rangeMin": 20}},
    "color": {"field": "Continent", "type": "nominal", 
      "scale": {
      "domain":["Africa","Americas","Asia","Europe","Oceania"],
      "range":["#FF8427","#FE9DE9","#DB2955","#97CC04","0E9594"]
  }},
  "tooltip": [
    {"field": "Continent", "type": "nominal"},
    {"field": "Total_Disasters", "type": "quantitative", "title": "Total Disasters"}
  ]
  },
  "config": {
    "legend": {
      "labelFontSize": 12,
      "titleFontSize": 16,
      "labelColor":"white",
      "titleColor":"white",
      "symbolSize":400
    },
    "title": {
      "color":"white",
      "fontSize": 20
    },
    "view": {
      "stroke": "transparent"
   }
    }
  }